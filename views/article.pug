extends layout

block content
    h1=article.title
    h5 Written by #{author}
    p  #{article.body}
    if user
        if user.id == article.author
            hr
            a.btn.btn-info(href='/articles/edit/'+article._id) Edit
            a.btn.btn-danger.delete-article(href='#',data-id=article._id) Delete


    br
    #form-group
        label Add Comment:
        input.form-control(name='body',type='text',id='comment-textinput' )
    br
    a.btn.btn-primary.add-comment(href="#",article-id=article._id) Add Comment